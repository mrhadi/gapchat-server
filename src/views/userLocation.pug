html
  head
    title='GapChat'
    link(rel='stylesheet', href='/styles/bootstrap.min.css')
  body
    div= numUserLocation
    div(class='table-responsive text-nowrap')
      table(class='table table-bordered')
        thead
          tr
            th RequestedBy
            th Last Update
            th User
            th City
            th Country
            th DeviceId
            th Weather
        tbody
          each location in userLocation
            - url = 'location/' + location.deviceId
            - weather = location.weather ? JSON.parse(location.weather) : null
            tr
              th= location.requestedBy
              th= moment(location.updatedAt).tz('Australia/Sydney').format('YYYY-MM-DD hh:mm:ss a')
              if location.fromUser[0]
                th= location.fromUser[0].nickName
              else
                th= ''
              th= location.fromUser[0].cityName
              th= location.fromUser[0].countryName
              th
                a(href=url)= location.deviceId
              if weather
                th= weather.location.name + ', ' + weather.location.country + ', ' + weather.location.region
              else
                th= location.weather

