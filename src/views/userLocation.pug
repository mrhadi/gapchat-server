html
  head
    title='GapChat'
    link(rel='stylesheet', href='/styles/bootstrap.min.css')
    script(src='/scripts/autoRefreshPage.js')
  body
    div(class='table-responsive text-nowrap')
      table(class='table table-bordered')
        thead
          tr
            th RequestedBy
            th Last Update
            th User
            th DeviceId
        tbody
          each location in userLocation
            - url = 'location/' + location.deviceId
            tr
              th= location.requestedBy
              th= moment(location.updatedAt).tz('Australia/Sydney').format('YYYY-MM-DD hh:mm:ss a')
              if location.fromUser[0]
                th= location.fromUser[0].nickName
              else
                th= ''
              th
                a(href=url)= location.deviceId

